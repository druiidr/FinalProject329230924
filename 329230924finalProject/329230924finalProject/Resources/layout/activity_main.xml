<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/choback22">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CHOPHONE"
        android:textSize="30dp"
        android:layout_gravity="center"
        android:layout_marginTop="25dp"
        android:textColor="#ccc"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_marginTop="70dp"
        android:orientation="horizontal">
        <Button
                  android:layout_width="150dp"
                  android:layout_height="match_parent"
            android:layout_marginLeft="20dp"
            android:text="log in"
            android:textSize="20dp"
            android:background="#55bcba"
            android:id="@+id/MainLoginBTN"/>
         <Button
                  android:layout_width="150dp"
                  android:layout_height="match_parent"
            android:layout_marginLeft="40dp"
                        android:text=" register"
            android:textSize="20dp"
             android:background="#55cdba"
             android:id="@+id/MainRegisterBTN"/>
    </LinearLayout>
    <Button
             android:layout_width="300dp"
             android:layout_height="70dp"
        android:layout_gravity="center"
        android:layout_marginTop="70dp"
        android:text="continue as guest"
        android:textSize="20dp"
        android:background="#5abbaa"
         android:id="@+id/MainCAGBTN"/>
</LinearLayout>