<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/choback22">
    <TextView
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                    android:text="PAY AS YOU WISH"
                    android:textSize="35dp"
        android:layout_gravity="center"
        android:layout_marginRight="7dp"
                    android:textColor="#518a88"/>
    <TextView
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                    android:text="Get exclusive content and unlimited mistakes"
                    android:textSize="18dp"
        android:layout_marginTop="7dp"
        android:layout_gravity="center"
                    android:textColor="#18aa18"/>
    <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="70dp"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="35dp"
                android:orientation="horizontal">
       
    <SeekBar
            android:background="#898989"
        android:layout_width="200dp"
        android:layout_height="40dp"
           android:id="@+id/PaymentSB"/>
         <TextView
                           android:layout_width="wrap_content"
                           android:layout_height="match_parent"
                    android:text="1000$"
                    android:layout_marginLeft="5dp"
                    android:textSize="27dp"
                    android:textColor="#00aa00"
            android:id="@+id/PaymentSumTV"/>
        </LinearLayout>
    <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="70dp"
        android:layout_marginTop="30dp"
                android:orientation="horizontal">
                <TextView
                           android:layout_width="wrap_content"
                           android:layout_height="match_parent"
                    android:text="card number"
                    android:textSize="27dp"
                    android:layout_marginLeft="30dp"
                    android:textColor="#00aa00"/>
                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:hint="enter inforamtion"
                    android:textSize="25dp"
                    android:layout_marginLeft="20dp"
                    android:textColorHint="#9e9e9e"
                     android:textColor="#e9e9e9"
                     android:id="@+id/paymentCardNumET"/>
        </LinearLayout>
        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="70dp"
        android:layout_marginTop="30dp"
                android:orientation="horizontal">
                <TextView
                           android:layout_width="wrap_content"
                           android:layout_height="match_parent"
                    android:text="CVV"
                    android:textSize="27dp"
                    android:layout_marginLeft="30dp"
                    android:textColor="#00aa00"/>
                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:hint="enter inforamtion"
                    android:textSize="25dp"
                    android:layout_marginLeft="20dp"
                    android:textColorHint="#9e9e9e"
                     android:textColor="#e9e9e9"
                     android:id="@+id/paymentCVVET"/>

        </LinearLayout>
        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="70dp"
        android:layout_marginTop="30dp"
                android:orientation="horizontal">
                <TextView
                           android:layout_width="wrap_content"
                           android:layout_height="match_parent"
                    android:text="card number"
                    android:textSize="27dp"
                    android:layout_marginLeft="30dp"
                    android:textColor="#00aa00"/>
                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:hint="MM"
                    android:textSize="25dp"
                    android:layout_marginLeft="20dp"
                    android:textColorHint="#9e9e9e"
                     android:textColor="#e9e9e9"
                     android:id="@+id/paymentExpDateMET"/>
          <TextView
                           android:layout_width="wrap_content"
                           android:layout_height="match_parent"
                    android:text="/"
                    android:textSize="35dp"
            android:textColor="#aaa"/>
        <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:hint="YY"
                    android:textSize="25dp"
                    android:textColorHint="#9e9e9e"
                     android:textColor="#e9e9e9"
                     android:id="@+id/paymentExpDateYET"/>
        </LinearLayout>
    
            <Button
                     android:layout_width="160dp"
                     android:layout_height="100dp"
                android:text="become a pro member"
                android:layout_gravity="center"
                android:id="@+id/PaymentSubscriptionBTN"/>
</LinearLayout>
