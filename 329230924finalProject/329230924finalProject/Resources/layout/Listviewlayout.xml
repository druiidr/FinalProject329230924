<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#9a9a9a">
    <TextView
        android:layout_width="120dp"
        android:layout_height="30dp"
        android:layout_marginLeft="20dp"
        android:textSize="20dp"
        android:text="name"
        android:id="@+id/ListViewNameTV"/>
    <TextView
             android:layout_width="100dp"
             android:layout_height="wrap_content"
           android:background="@drawable/abc_ic_clear_material"
        android:textSize="20dp"
        android:text="view notes"
        android:layout_marginLeft="30dp"
        android:textColor="#119999"
        android:id="@+id/ListviewNotesTV"/>
    <ImageView
        android:layout_width="70dp"
        android:layout_height="60dp"
        android:layout_marginLeft="30dp"
        android:background="@drawable/hearted"
        android:id="@+id/ListviewlikedIV" />
        <ImageButton
        android:layout_width="70dp"
        android:layout_height="60dp"
        android:layout_marginLeft="-70dp"
        android:background="@drawable/unhearted"
        android:visibility="visible"
        android:id="@+id/ListviewdislikedIB" />

</LinearLayout>
