<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/choback">
    
         <TextView
             android:layout_width="wrap_content"
             android:layout_height="80dp"
                android:text="Reset Password"
                android:textSize="40dp"
                android:textColor="#cccc"
                android:layout_gravity="center"/>
          <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="70dp"
                android:orientation="horizontal"
                android:layout_marginTop="15dp">

                <TextView
                           android:layout_width="wrap_content"
                           android:layout_height="match_parent"
                    android:text="User name"
                    android:textSize="27dp"
                    android:layout_marginLeft="20dp"
                    android:textColor="#3aa7aa"/>
            />
                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:hint="enter inforamtion"
                    android:textSize="25dp"
                    android:layout_marginLeft="20dp"
             android:textColor="#e9e9e9"
                    android:textColorHint="#7c7c7c"
                     android:id="@+id/ForgotUNameContentET"/>
        </LinearLayout>
      <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="70dp"
                android:orientation="horizontal"
        android:layout_marginTop="10dp">
                <TextView
                           android:layout_width="wrap_content"
                           android:layout_height="match_parent"
                    android:text="Email"
                    android:textSize="27dp"
                    android:layout_marginLeft="20dp"
                    android:textColor="#3aa7aa"/>
                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:hint="enter inforamtion"
                    android:textSize="25dp"
                    android:layout_marginLeft="20dp"
             android:textColor="#e9e9e9"
                    android:textColorHint="#9e9e9e"
                     android:id="@+id/ForgotEMailContentET"/>
        </LinearLayout>
    <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="70dp"
                android:orientation="horizontal"
                android:layout_marginTop="25dp">

                <TextView
                           android:layout_width="wrap_content"
                           android:layout_height="match_parent"
                    android:text="password"
                    android:textSize="27dp"
                    android:layout_marginLeft="20dp"
                    android:textColor="#3aa7aa"/>
            />
                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:hint="enter inforamtion"
                    android:textSize="25dp"
                    android:layout_marginLeft="20dp"
                    android:textColorHint="#7c7c7c"
             android:textColor="#e9e9e9"
                     android:id="@+id/ForgotPassContentET"/>
        </LinearLayout>
      <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="70dp"
                android:orientation="horizontal"
        android:layout_marginTop="20dp">
                <TextView
                           android:layout_width="120dp"
                           android:layout_height="match_parent"
                    android:text="confirm password"
                    android:textSize="27dp"
                    android:layout_marginLeft="20dp"
                    android:textColor="#3aa7aa"/>
                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:hint="enter inforamtion"
                    android:textSize="25dp"
                    android:layout_marginLeft="20dp"
                    android:textColorHint="#9e9e9e"
             android:textColor="#e9e9e9"
                     android:id="@+id/ForgotconfirmPasswordContentET"/>
        </LinearLayout>
     <Button
                     android:layout_width="160dp"
                     android:layout_height="100dp"
                android:text="Log in"
                android:id="@+id/ForgotResetBTN"
        android:background="#34a5af"
        android:layout_gravity="center"
                android:layout_marginTop="20dp"/>
</LinearLayout>

