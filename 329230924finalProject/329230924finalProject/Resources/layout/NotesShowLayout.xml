<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/choback22">
     <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal" android:layout_marginTop="10dp">
         <SearchView
             android:layout_width="match_parent"
            android:background="#e3e3e3"
             android:layout_height="match_parent"
            android:id="@+id/NotesShowSearchSV"/>
            />
        </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:orientation="horizontal">
      
         
      <Spinner
             android:layout_width="180dp"
             android:layout_height="80dp"

        android:layout_gravity="center"
        
        android:layout_marginLeft="2dp"
        android:background="#17e1e9"
        android:id="@+id/NotewShowLevelSelectionSP"/>
          <Spinner
             android:layout_width="180dp"
             android:layout_height="80dp"

        android:layout_gravity="center"
        
        android:layout_marginLeft="18dp"
        android:background="#17e1e9"
        android:id="@+id/NotewShowgenreSelectionSP"/>
           />
        </LinearLayout>
        <ListView
          android:layout_gravity="center"
        android:layout_marginTop="40dp"
              android:layout_width="300dp"
              android:layout_height="match_parent"
android:id="@+id/NotesShowListviewlv"/>

</LinearLayout>
