<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/choback">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="sort by"
            android:textSize="20dp"
            android:textColor="#80dafa"/>
        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Genre"
            android:id="@+id/NotesShowGenreCB"
            android:textColor="#cacaca"
            android:layout_marginLeft="20dp"/>
        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="difficulty"
            android:id="@+id/NotesShowDiffficultyCB"
            
            android:textColor="#cacaca"
            android:layout_marginLeft="20dp"/>
            />
        </LinearLayout>
      <Spinner
             android:layout_width="195dp"
             android:layout_height="80dp"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        
        android:layout_marginLeft="2dp"
        android:background="#17e1e9"
        android:id="@+id/NotewShowLevelSelectionSP"/>
        <ListView
          android:layout_gravity="center"
        android:layout_marginTop="40dp"
              android:layout_width="300dp"
              android:layout_height="match_parent"
android:id="@+id/NotesShowListviewlv"/>

</LinearLayout>
