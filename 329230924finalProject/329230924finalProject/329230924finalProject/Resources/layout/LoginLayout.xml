<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/choback">
     <TextView
             android:layout_width="wrap_content"
             android:layout_height="80dp"
                android:text="Login"
                android:textSize="40dp"
                android:textColor="#cccc"
                android:layout_gravity="center"/>
          <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="70dp"
                android:orientation="horizontal"
                android:layout_marginTop="45dp">

                <TextView
                           android:layout_width="wrap_content"
                           android:layout_height="match_parent"
                    android:text="User name"
                    android:textSize="27dp"
                    android:layout_marginLeft="20dp"
                    android:textColor="#6699ff"/>
                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:hint="enter inforamtion"
                    android:textSize="25dp"
                    android:layout_marginLeft="20dp"
                    android:textColorHint="#7c7c7c"
             android:textColor="#e9e9e9"
                     android:id="@+id/LoginUNameContentET"/>
        </LinearLayout>
      <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="70dp"
                android:orientation="horizontal"
        android:layout_marginTop="40dp">
                <TextView
                           android:layout_width="wrap_content"
                           android:layout_height="match_parent"
                    android:text="Password"
                    android:textSize="27dp"
                    android:layout_marginLeft="20dp"
                    android:textColor="#6699ff"/>
                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:hint="enter inforamtion"
                    android:textSize="25dp"
                    android:layout_marginLeft="20dp"
                    android:textColorHint="#9e9e9e"
             android:textColor="#e9e9e9"
                     android:id="@+id/LoginPasswordContentET"/>
        </LinearLayout>
     <Button
                     android:layout_width="160dp"
                     android:layout_height="100dp"
                android:text="Log in"
                android:id="@+id/LoginLogInBTN"
        android:layout_gravity="center"
                android:layout_marginTop="40dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="20dp">
<CheckBox
    android:layout_width="wrap_content"
    android:layout_height="40dp"
        android:id="@+id/LoginRememberMeCB"
        android:text="remeber me"
        android:textColor="#cccccc"
        android:textSize="20dp"
        android:layout_gravity="center"/>
        <CheckBox
    android:layout_width="wrap_content"
    android:layout_height="40dp"
        android:id="@+id/LoginShowPassCB"
        android:text="show pass"
        android:textColor="#cccccc"
        android:textSize="20dp"
        android:layout_gravity="center"/>
        <Button
                 android:layout_width="wrap_content"
                 android:layout_height="match_parent"
            android:layout_marginLeft="40dp"
            android:text="forgot password"
            android:id="@+id/LoginIForgorBTN"
            android:background="@drawable/abc_ic_clear_material"
            android:textColor="#4ee"/>
</LinearLayout>
</LinearLayout>

